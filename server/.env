# Database Configuration (MongoDB)
MONGODB_URI=mongodb://localhost:27017/melodymind

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Server Settings
PORT=8000
NODE_ENV=development
HOST=0.0.0.0
DEBUG=true
# Client Configuration
CLIENT_ORIGIN=http://localhost:3000

# File Upload Settings
MAX_FILE_SIZE_MB=15
UPLOAD_DIR=./uploads

# AI Adapters (using mock by default)
AI_FACE_ADAPTER=mock
AI_TEXT_ADAPTER=mock
AI_AUDIO_ADAPTER=mock
AI_RECO_ADAPTER=mock

# Hugging Face Configuration (optional)
HF_API_TOKEN=
HF_IMAGE_MODEL_ID=trpakov/vit-face-expression
HF_TEXT_MODEL_ID=joeddav/distilbert-base-uncased-go-emotions-student
HF_AUDIO_MODEL_ID=ehcalabres/wav2vec2-lg-xlsr-en-speech-emotion-recognition
HF_EMBED_MODEL_ID=sentence-transformers/all-MiniLM-L6-v2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json